doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title 主机选择界面
        link(rel="stylesheet" href="lib/bootstrap.min.css")
        link(rel='stylesheet' href="css/user.css")
        link(rel='stylesheet' href="css/animation.css")
    body
        div#animation
        div#main.login-wrapper.col-md-4.col-sm-5.col-xs-6
            div.login-form.form-horizontal.button-group
                h4.text-center.form-title SSH远程控制台
                .form-group
                    label.col-lg-2.col-md-2.col-sm-2.col-xs-2.control-label 主机
                    .col-lg-10.col-md-10.col-sm-10.col-xs-10
                        select#host.form-control(name="host")
                            each item, index in hostSelections
                                if index === 0
                                    option(value=item.hostValue selected)=item.hostIP
                                else
                                    option(value=item.hostValue)=item.hostIP
                .form-group
                    label.col-lg-2.col-md-2.col-sm-2.col-xs-2.control-label(for="hostUser") 用户
                    .col-lg-10.col-md-10.col-sm-10.col-xs-10
                        input#hostUser.form-control(name="hostUser" type="text" placeholder="请输入远程主机用户名")
                input#btn-submit.btn.btn-primary.btn-block.btn-submit(type="button" value="确认")
        .bg
        script(src="lib/jquery-1.12.4.min.js" type="text/javascript")
        script(src="js/user.js" type="text/javascript")